<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verific"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hadi.hosp.verific">

    <TextView
        android:text="VERIFICATION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:background="#04a777"
        android:id="@+id/header" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/header">


        <TextView
            android:text="PLEASE ENTER VERIFICATION CODE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/roundedback"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:id="@+id/textView14" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Verification Code"
            android:layout_gravity="center"
            android:background="@drawable/textfieldone"
            android:textColorHint="#ffffff"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:id="@+id/veriedit" />

        <Button
            android:text="SUBMIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/roundblue"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:id="@+id/verisub" />

        <TextView
            android:text="The Verification Code is - 12345"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textSize="18dp"
            android:layout_margin="20dp"
            android:id="@+id/textView15" />
    </LinearLayout>

</RelativeLayout>
